<fieldset class="form-fieldset">
    <%= simple_form_for [space, booking] do |f| %>
  <div class="form-group">
    <label class="form-label">Your planned activity</label>
    <%= f.input :activity, collection: @activities, class: "form-control form-required selectize-input items full has-options has-items focus input-active dropdown-active"
    #   placeholder: "Off-site"
      %>

  </div>
      <div class="form-group">
        <label class="form-label">Start</label>
        <div class="input-group date" id="datetimepicker1" data-target-input="nearest">
          <input type="text" class="form-control datetimepicker-input" data-target="#datetimepicker1" name="booking[start_time]"/>
          <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class="form-group">
        <label class="form-label">End</label>
        <div class="input-group date" id="datetimepicker2" data-target-input="nearest">
          <input type="text" class="form-control datetimepicker-input" data-target="#datetimepicker2" name="booking[end_time]"/>
          <div class="input-group-append" data-target="#datetimepicker2" data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

  <div class="form-group">
    <label class="form-label">Guests<span class="form-required"></span></label>
    <%= number_field_tag :guest,
    params[:guest],
    class: 'form-control form-required',
    style: 'width: 30%'
    %>
  </div>
  <div class="form-group mb-0">
    <%=  submit_tag 'Book it',
    class: 'btn btn-primary btn-square',
    style: 'width: 100%',
    placeholder: @space.capacity
    %>
  </div>
    </div>
  </div>
  <% end %>
</fieldset>

<%= content_for(:after_js) do %>
<script type="text/javascript">
  $(function () {
    $('#datetimepicker1').datetimepicker({ format: 'DD/MM/YYYY hh:mm',
        startDate: '-3d'
    });
  });
  $(function () {
    $('#datetimepicker2').datetimepicker({ format: 'DD/MM/YYYY hh:mm',
      startDate: '-3d'
    });
  });
</script>
<% end %>

