<div class="wrapper-grey padded">
  <div class="container">
    <h3 class="text-center">Your Incoming Booking Requests 🚀</h3>
    <% if current_user.spaces.present? %>
    <% current_user.spaces.each do |space| %>
    <% space.bookings.each do |booking| %>
    <% if booking.present? %>
    <div class="product">
      <div class='product-body'>
        <h3><%= link_to booking.space.name, space_path(booking.space) %></h3>
        <p><%= booking.user.first_name %> wants to book from <%= booking.start_time%> until <%= booking.end_time %></p>
      </div>
      <ul class="list-inline product-controls hidden-sm hidden-xs">
        <% if booking.status == "Accepted" %>
        <p class="status accepted">Accepted</p>
        <% elsif booking.status == "Declined" %>
        <p class="status declined">Declined</p>
        <% else %>
        <%= simple_form_for ([space, booking]) do |f| %>
        <%= f.select :status, [['Accepted', true],['Declined', false]]%>
        <br>
        <br>
        <%= f.button :submit, :class => 'btn btn-primary' %>
        <% end %>
        <% end %>
      </ul>
    </div>
    <% end %>
    <% end %>
    <% end %>
    <% else %>
    <p>You have no spaces</p>
    <% end %>
  </div>
</div>

<div class="wrapper-grey padded">
  <div class="container">
    <h3 class="text-center">Your Outgoing Bookings & Reviews 🚀</h3>
    <% Booking.all.each do |booking| %>
    <% if booking.user == current_user %>
    <div class="product">
      <div class='product-body'>
        <h3><%= link_to booking.space.name, space_path(booking.space) %></h3>
        <% if booking.end_time < Date.today %>
        <p>
          <%= link_to "Review this past booking ❤️", new_booking_review_path(booking) %>
        </p>
        <% else %>
        <p><%= booking.start_date%> - <%= booking.end_date %></p>
        <% end %>
      </div>
      <ul class="list-inline product-controls hidden-sm hidden-xs">
        <% if booking.status.nil? %>
        <p class="status pending">Pending</p>
        <% elsif booking.status == true %>
        <p class="status accepted">Accepted</p>
        <% elsif booking.status == false %>
        <p class="status declined">Declined</p>
        <% end %>
      </ul>
    </div>
    <% end %>
    <% end %>
  </div>
</div>

<div class="wrapper-grey padded">
  <div class="container">
    <h3 class="text-center">Your spaces 🚀</h3>
    <div class="row">
      <% current_user.spaces.each do |space| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <%= link_to space_path(space) do %>
        <% if space.pictures.present? %>
        <div class="card" style="background-image: url('<%= cl_image_path favorite.space.pictures[0].path, crop: :fill %>')">
          <% else %>
          <div class="card" style="background-image: url('https://media.tenor.com/images/baa51bc6187cb2fc286a3d3582061f12/tenor.png')">
            <% end %>
            <div class="card-description">
              <%= space.name %>
            </div>
            <div class="card-price">
           </div>
         </div>
       </div>
       <% end %>
       <% end %>
     </div>

      <div class="bottomgroup">
        <div class="bottombuttons">

       <%= link_to 'Add a New space', new_space_path, class: "text-center btn btn-primary" %>

       <%= link_to 'Back to Spaces', spaces_path, class: "text-center btn btn-secondary" %>
       <p></p>
       </div>
    </div>
   </div>
 </div>
</div>
