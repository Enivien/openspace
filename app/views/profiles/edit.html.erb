<br>
<div class="container">
    <h2 class="text-center">Edit your profile üòç</h2>
    <div class="wrapper-grey padded">
      <div class="fullpage">
        <%= simple_form_for(@user) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :bio %>
          <%= f.input :avatar %>
          <%= f.input :avatar_cache, as: :hidden %>
        </div>
        <div class="form-actions ">
          <%= f.button :submit, "Edit" %>
        </div>
        <% end %>
      </div>
  </div>
</div>
