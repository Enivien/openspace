<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-3 offset-md-4">
    <h2 class="margin-top-60">What activities are allowed? </h2>
    <div class="wrapper-grey padded">
      <div class="fullpage">
        <%= simple_form_for [@space, @activity] do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs text-center">
          <%= f.input :offsite_meeting %>
          <%= f.input :workshop %>
          <%= f.input :photo_shoot %>
          <%= f.input :film_shoot %>
          <%= f.input :corporate_event %>
          <%= f.input :office_party %>
          <%= f.input :product_launch %>
        </div>
        <div class="form-actions text-center">
          <%= f.button :submit, "Submit" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>


